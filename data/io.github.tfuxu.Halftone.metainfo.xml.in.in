<?xml version='1.0' encoding='utf-8'?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <name translate="no">Halftone</name>
  <summary>Dither your images</summary>
  <developer id="io.github.tfuxu">
    <name translate="no">tfuxu</name>
  </developer>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <translation type="gettext">halftone</translation>
  <metadata_license>CC-BY-SA-4.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <update_contact>tfuxu@tutanota.com</update_contact>
  <content_rating type="oars-1.1"/>

  <description>
    <p>
      A simple Libadwaita app for lossy image compression using dithering technique.

      Give your images a pixel art-like style and reduce the file size in the process with Halftone.
    </p>
  </description>

  <screenshots>
    <screenshot type="default" width="1395" height="994">
      <image type="source">https://raw.githubusercontent.com/tfuxu/Halftone/main/data/screenshots/halftone-1.png</image>
    </screenshot>
    <screenshot width="1395" height="994">
      <image type="source">https://raw.githubusercontent.com/tfuxu/Halftone/main/data/screenshots/halftone-2.png</image>
    </screenshot>
    <screenshot width="1395" height="994">
      <image type="source">https://raw.githubusercontent.com/tfuxu/Halftone/main/data/screenshots/halftone-3.png</image>
    </screenshot>
    <screenshot width="1395" height="994">
      <image type="source">https://raw.githubusercontent.com/tfuxu/Halftone/main/data/screenshots/halftone-4.png</image>
    </screenshot>
    <screenshot width="1395" height="994">
      <image type="source">https://raw.githubusercontent.com/tfuxu/Halftone/main/data/screenshots/halftone-5.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#f5c211</color>
    <color type="primary" scheme_preference="dark">#c64600</color>
  </branding>

  <url type="homepage">@PROJECT_URL@</url>
  <url type="bugtracker">@BUGTRACKER_URL@</url>
  <url type="help">@HELP_URL@</url>
  <!--<url type="translate">@TRANSLATE_URL@</url>-->

  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>ModernToolkit</kudo>
  </kudos>

  <requires>
    <internet>offline-only</internet>
    <display_length compare="ge">360</display_length>
  </requires>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <custom>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <releases>
    <release version="0.6.1" date="2024-04-04">
      <description translate="no">
        <ul>
          <li>Updated widgets to make use of new Libadwaita 1.5 widgets</li>
          <li>Updated translations for Russian, Turkish and Simplified Chinese</li>
        </ul>
      </description>
    </release>
    <release version="0.6.0" date="2024-01-10">
      <description translate="no">
        <p>
          Another major UI design update!
          This update notably moves sidebar to the left and makes image preview area extra large, by making headerbar transparent.
        </p>

        <p>Changes:</p>
        <ul>
          <li>Implement UI suggestions from GNOME Circle application</li>
          <li>Add keyboard shortcuts for toggling sidebar and main menu</li>
          <li>Fixed formatting in appdata, now release info should finally show up in Flathub!</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="0.5.0" date="2023-12-10">
      <description translate="no">
        <ul>
          <li>Bottom options sheet for mobile users</li>
          <li>Fix main window not being able to resize width down to 360px</li>
          <li>Load image options from previous image to next loaded image</li>
          <li>New translations</li>
        </ul>
      </description>
    </release>
    <release version="0.4.0" date="2023-11-11">
      <description translate="no">
        <ul>
          <li>New refreshed user interface</li>
          <li>Fix issue with "Open in External Image Viewer" button not working on Flatpak builds</li>
          <li>New translations</li>
        </ul>
      </description>
    </release>
    <release version="0.3.1" date="2023-06-30">
      <description translate="no">
        <ul>
          <li>Added option to change how image should be resized to fit inside preview box</li>
          <li>Now Halftone uses flat headerbar style</li>
          <li>New translations</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2023-06-09">
      <description translate="no">
        <ul>
          <li>Added brightness and contrast control</li>
          <li>Added button for opening preview image in external image viewers</li>
          <li>Added custom logging facility for easier issue reporting</li>
          <li>Added logic code to "Copy Logs" button</li>
          <li>Moved image size option to Image Properties</li>
          <li>New translations</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2023-05-20">
      <description translate="no">
        <p>Renamed Pixely to Halftone.</p>
      </description>
    </release>
    <release version="0.1.0" date="2023-05-16">
      <description translate="no">
        <p>Initial release of Pixely.</p>
      </description>
    </release>
  </releases>
</component>
