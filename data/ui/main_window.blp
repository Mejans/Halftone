using Gtk 4.0;
using Adw 1;

template $HalftoneMainWindow: Adw.ApplicationWindow {
  title: "Halftone";
  default-width: 500;
  default-height: 800;
  width-request: 360;
  height-request: 294;

  Adw.ToastOverlay toast_overlay {
    Gtk.Stack main_stack {
      transition-type: crossfade;

      Gtk.StackPage {
        name: "stack_welcome_page";

        child: Adw.ToolbarView welcome_page {
          top-bar-style: flat;

          [top]
          Adw.HeaderBar {
            centering-policy: strict;

            [end]
            Gtk.Button {
              icon-name: "help-about-symbolic";
              tooltip-text: _("About Halftone");
              action-name: "app.about";

              styles [
                "flat"
              ]
            }
          }

          content: Adw.StatusPage {
            icon-name: "io.github.tfuxu.Halftone";
            title: "Halftone";
            description: _("Dither your images");
            hexpand: true;
            vexpand: true;

            child: Gtk.Box {
              orientation: vertical;
              spacing: 12;

              Gtk.Button open_image_button {
                valign: center;
                halign: center;
                clicked => $on_open_image();

                label: _("Open Image");

                styles [
                  "suggested-action",
                  "pill"
                ]
              }
            };
          };
        };
      }

      Gtk.StackPage {
        name: "stack_loading_page";

        child: Adw.ToolbarView {
          top-bar-style: flat;

          [top]
          Adw.HeaderBar {
            centering-policy: strict;

            [end]
            Gtk.Button {
              icon-name: "help-about-symbolic";
              tooltip-text: _("About Halftone");
              action-name: "app.about";

              styles [
                "flat"
              ]
            }
          }

          content: Gtk.Box {
            hexpand: true;
            vexpand: true;
            valign: center;
            halign: center;

            Adw.Spinner {
              width-request: 48;
              height-request: 48;
            }
          };
        };
      }

      Gtk.StackPage {
        name: "stack_drop_page";

        child: Adw.StatusPage drop_overlay {
          icon-name: "insert-image-symbolic";
          title: _("Drop Here to Load Image");

          styles [
            "dragndrop_overlay"
          ]
        };
      }

      Gtk.StackPage {
        name: "stack_error_page";

        child: Adw.ToolbarView {
          top-bar-style: flat;

          [top]
          Adw.HeaderBar {
            centering-policy: strict;

            [end]
            Gtk.Button {
              icon-name: "help-about-symbolic";
              tooltip-text: _("About Halftone");
              action-name: "app.about";

              styles [
                "flat"
              ]
            }
          }

          content: Adw.StatusPage {
            hexpand: true;

            icon-name: "image-missing-symbolic";
            title: _("Image Error Occurred");
            description: _("An error occurred while loading an image. If this error persists, please copy logs and report issue to the bug tracker.");

            Gtk.Box {
              orientation: horizontal;
              halign: center;
              spacing: 6;

              Gtk.Button {
                label: _("Copy Logs");
                clicked => $on_copy_logs_clicked();

                styles [
                  "pill"
                ]
              }
            }
          };
        };
      }
    }
  }
}

Gtk.FileDialog open_image_dialog {
  title: _("Select an Image");
  modal: true;
}

Gtk.FileFilter all_filter {
  name: _("All files");
  mime-types ["application/octet-stream"]
}
